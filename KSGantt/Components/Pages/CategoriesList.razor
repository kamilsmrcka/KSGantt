@page "/CategoriesList"
@using KSGantt.Db
@rendermode InteractiveServer

<PageTitle>Kategorie</PageTitle>
<RadzenText TextStyle="TextStyle.H5">KATEGORIE</RadzenText>

<RadzenDataGrid PageSize="10" AllowPaging="true" AllowSorting="true" ColumnWidth="200px" Data="@innerList" AllowFiltering="true">
    <Columns>
        <RadzenDataGridColumn Property="@nameof(KSCategory.Id)" Title="ID" Visible="false" />
        <RadzenDataGridColumn Property="@nameof(KSCategory.Name)" Title="Název" />
        <RadzenDataGridColumn Property="@nameof(KSCategory.CreateDate)" Title="Vytvořeno" />
    </Columns>
</RadzenDataGrid>

@code {
    List<KSCategory> innerList;

    protected override Task OnInitializedAsync()
    {
        innerList = Db.DbHelper.categories;
        return base.OnInitializedAsync();
      
    }

}

