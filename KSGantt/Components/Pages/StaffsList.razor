@page "/StaffsList"
@using KSGantt.Db
@rendermode InteractiveServer

<PageTitle>Pracovníci</PageTitle>
<RadzenText TextStyle="TextStyle.H5">Pracovníci</RadzenText>

<RadzenDataGrid PageSize="5" AllowPaging="true" AllowSorting="true" ColumnWidth="200px" Data="@innerList" AllowFiltering="true">
    <Columns>
        <RadzenDataGridColumn Property="@nameof(KSStaff.Id)" Title="ID" />
        <RadzenDataGridColumn Property="KSStaff.Category.Name" Title="Kategorie" />
        <RadzenDataGridColumn Property="@nameof(KSStaff.Name)" Title="Název" />
        <RadzenDataGridColumn Property="@nameof(KSStaff.WorkingFactor)" Title="Koef. výkonnosti" FormatString="{0:n1}" />
        <RadzenDataGridColumn Property="@nameof(KSStaff.CreateDate)" Title="Vytvořeno" />
    </Columns>
</RadzenDataGrid>

@code {
    List<KSStaff> innerList;

    protected override Task OnInitializedAsync()
    {
        innerList = Db.DbHelper.staffs;
        return base.OnInitializedAsync();

    }

}





